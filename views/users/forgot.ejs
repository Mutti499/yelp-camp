<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-2">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="images/forgot.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Forgot password?</h5>
                    <p class="card-text">Please enter your registered email adress. We'll send instructions to help reset your password.</p>
                    <form action="/forgot" method="POST" class="validateForm" novalidate>
                        <div class="mb-3">
                            <input class="form-control" type="text" id="email" name="email" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-block">Send reset instructions</button>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>