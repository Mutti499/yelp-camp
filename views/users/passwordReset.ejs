<% layout('layouts/boilerplate')%>
<div class="container mt-2">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Reset account password</h5>
                    <p class="card-text">Enter a new password for <strong><%= user.username %></strong></p>
                    <form action="/reset-password/<%= user.id %>/<%= token %>" method="POST" class="validateForm" novalidate>

                        <div class="mb-3">
                            <label class="form-label" for="password1">New Password</label>
                            <input class="form-control" type="password" id="password1"  minlength="4" name="password1" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Password must contain at least 4 character
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password2">Verify New Password</label>

                            <input class="form-control" type="password" id="password2" name="password2" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-block">Reset my password</button>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>